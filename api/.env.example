# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/wifi_billing"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production-32chars"
BCRYPT_ROUNDS=12
ENCRYPTION_KEY="your-32-char-encryption-key-here"

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Mobile Money - MTN (Get from https://momodeveloper.mtn.com)
MTN_API_URL="https://sandbox.momodeveloper.mtn.com"
MTN_SUBSCRIPTION_KEY="your-mtn-subscription-key"
MTN_API_USER_ID="your-mtn-api-user-id"
MTN_API_KEY="your-mtn-api-key"
MTN_CALLBACK_URL="http://localhost:3000/api/payments/mtn/callback"

# Mobile Money - Airtel (Get from https://developers.airtel.africa)
AIRTEL_API_URL="https://openapiuat.airtel.africa"
AIRTEL_CLIENT_ID="your-airtel-client-id"
AIRTEL_CLIENT_SECRET="your-airtel-client-secret"
AIRTEL_CALLBACK_URL="http://localhost:3000/api/payments/airtel/callback"

# MikroTik Settings
DEFAULT_MIKROTIK_PORT=8728
DEFAULT_MIKROTIK_TIMEOUT=5000

# System Settings
VOUCHER_CODE_LENGTH=8
SESSION_TIMEOUT_MINUTES=30
CLEANUP_INTERVAL_HOURS=24